package csd;

class App {	
	public static void main(String [] args)
	{	
		java.util.Scanner inp = new java.util.Scanner(System.in);
		
		double total = 0;
		
		System.out.println("Armut Kaç Kilo:");
		double armut = Double.parseDouble(inp.nextLine());
		total += armut * 2.14;
		
		System.out.println("Elma  Kaç Kilo:");
		double elma  = Double.parseDouble(inp.nextLine());
		total += elma * 3.67;

		
		System.out.println("Domates   Kaç Kilo:");
		double domates   = Double.parseDouble(inp.nextLine());
		total += domates * 1.11;

		System.out.println("Muz  Kaç Kilo:");
		double muz  = Double.parseDouble(inp.nextLine());
		total += muz * 0.95;
		
		System.out.println("Patlıcan  Kaç Kilo:");
		double patlıcan  = Double.parseDouble(inp.nextLine());
		total += patlıcan * 5;
		
		System.out.printf("Toplam tutar = %.2f", total);
		
	}
}
 

