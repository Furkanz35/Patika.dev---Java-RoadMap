package csd;

class App {	
	public static void main(String [] args)
	{	
		java.util.Scanner inp = new java.util.Scanner(System.in);
		double pi = 3.14;
		
		System.out.println("Lütfen dairenin yarıçapını giriniz:");
		double r = Double.parseDouble(inp.nextLine());
		
		System.out.printf("Girilen dairenin çevresi %.2f alanı ise %.2f dir", 2*pi*r, pi*r*r);
	}
}
 

